<UserControl x:Class="iRacingTV.PropertyGridFolderPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iRacingTV"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300"
             x:Name="TheControl">
    <DockPanel>
        <Button x:Name="PickFolderButton" Content="📁" Click="PickFolderButton_Click" DockPanel.Dock="Right"/>
        <TextBox Text="{Binding ElementName=TheControl, Path=Value}" BorderThickness="0"/>
    </DockPanel>
</UserControl>
