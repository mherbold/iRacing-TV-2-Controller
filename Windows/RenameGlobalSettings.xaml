<Window x:Name="window" x:Class="iRacingTV.RenameGlobalSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iRacingTV"
        mc:Ignorable="d"
        Title="Rename Global Settings" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" Topmost="True" Closing="Window_Closing">
    <Grid Margin="5,10,5,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Margin="5,0,5,0" Text="{Binding FileName}"/>
        <Button Grid.Column="1" Content="Rename" Margin="5,0,5,0" Padding="10,0,10,0" IsDefault="True" Click="Rename_Click"/>
        <Button Grid.Column="2" Content="Cancel" Margin="5,0,5,0" Padding="10,0,10,0" Click="Cancel_Click"/>
    </Grid>
</Window>
